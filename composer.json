{
    "name": "ratno/petruk",
    "authors": [
        {
            "name": "ratno putro sulistiyono",
            "email": "ratno@knoqdown.com"
        }
    ],
    "autoload": {
        "psr-4": {
            "Ratno\\Petruk\\Console\\": "src/"
        },
        "files": [
            "src/helpers.php"
        ]
    },
    "bin": ["petruk"],
    "require": {
        "symfony/console": "*",
        "symfony/filesystem": "*",
        "symfony/process": "*"
    },
    "require-dev": {
        "phpunit/phpunit": "^10.0"
    },
    "autoload-dev": {
        "psr-4": {
            "Ratno\\Petruk\\Test\\": "tests/"
        }
    },
    "scripts": {
        "test": "phpunit",
        "test-unit": "phpunit tests/Unit",
        "test-integration": "phpunit tests/Integration",
        "test-coverage": "phpunit --coverage-html coverage"
    }
}
